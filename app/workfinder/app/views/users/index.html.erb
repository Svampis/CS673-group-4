<h1 class="h1">Servicemen</h1>

<h2 class="h2">Search By Location</h2>

<%= form_with url: users_path, method: :get, local: true, html: { class: "search-form" } do |f| %>
  <div class = "search-form-inner">
    <div class="form-group">
      <%= f.label :city, "City" %>
      <%= f.text_field :city, placeholder: "Search by city" %>
    </div>
    <div class="form-group">
      <%= f.label :state, "State" %>
      <%= f.text_field :state, placeholder: "Search by state" %>
    </div>
    <%= f.submit "Search", class: "search-button" %>
  </div>
<% end %>

<div id="users">
  <% @users.where(role: 1).each do |user| %>
    <%= link_to user_path(user), style: "text-decoration: none; color: inherit;" do %>
      <div class="user-card">
        <div>
          <h2><%= user.name %></h2>
          <p><strong>State:</strong> <%= user.state %></p>
          <p><strong>Description:</strong> <%= user.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
