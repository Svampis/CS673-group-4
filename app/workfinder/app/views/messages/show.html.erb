<h1>Messages with <%= @receiver.username %></h1>

<div class="message-thread-page">
  <div class="message-form-container">
    <h2>Write a message</h2>
    <%= form_with model: @message, class: "message-form" do |form| %>
      <div class="form-group">
        <%= form.text_field :body, placeholder: "Type your message..." %>
        <%= form.hidden_field :sender_id, value: @sender.id %>
        <%= form.hidden_field :receiver_id, value: @receiver.id %>
      </div>
      <div class="form-group">
        <%= form.submit "Send" %>
      </div>
    <% end %>
  </div>

  <div class="message-table-container">
    <table border="1">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Message body</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% @messages.all.each do |message| %>
          <tr>
            <td> 
              <% if message.sender_id == @sender.id %>
                <%= @sender.username %>
              <% else %>
                <%= @receiver.username %>
              <% end %> 
            </td>
            <td> <%= message.body %> </td>
            <td> <%= message.created_at %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
