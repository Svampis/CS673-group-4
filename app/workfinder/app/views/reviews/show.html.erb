<h1>Reviews for <%= @reviewee.username %></h1>

<div class="message-thread-page">
  <div class="message-form-container">
    <h2>Write a review</h2>
    <%= form_with model: @review, class: "message-form" do |form| %>
      <div class="form-group">
        <%= form.text_field :body, placeholder: "Type your review..." %>
        <%= form.number_field :rating, in: 1..5, placeholder: "Rating" %>
        <%= form.hidden_field :reviewer_id, value: @reviewer.id %>
        <%= form.hidden_field :reviewee_id, value: @reviewee.id %>
      </div>
      <div class="form-group">
        <%= form.submit "Send" %>
      </div>
    <% end %>
  </div>

  <div class="message-table-container">
    <table border="1">
      <thead>
        <tr>
          <th>Reviewer</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.all.each do |review| %>
          <tr>
            <td> <%= review.reviewer.username %> </td>
            <td> <%= review.body %> </td>
            <td> <%= review.rating %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

