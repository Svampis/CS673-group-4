              class="message-input" 
              id="message-input" 
              placeholder="Your message" 
              rows="1"
              onkeydown="handleMessageInputKeydown(event)"
            ></textarea>
            <div class="input-actions">
              <span style="cursor: pointer;">üé§</span>
            </div>
          </div>
          <button class="send-button" id="send-button" onclick="sendMessage()" disabled>
            ‚û§
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    // Global state
    let currentUserId = null;
    let currentUserName = null;
    let currentConversationId = null;
    let conversations = [];
    let messagesSubscription = null;
    let cable = null;
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      checkAuthStatus();
      // ActionCable will be initialized after the module script loads
      setTimeout(initializeActionCable, 100);
    });
    
    function setupRoleBasedNavbar(userRole) {
      // Hide all role-specific nav items first
      const homeownerNavItems = ['homeowner-nav-find-tradesmen', 'homeowner-nav-my-projects'];
      const tradesmanNavItems = ['tradesman-nav-projects'];
      const commonNavItems = ['nav-messages', 'nav-manage-profile'];
      
      // Hide all
      [...homeownerNavItems, ...tradesmanNavItems, ...commonNavItems].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.style.display = 'none';
      });
      
      if (!userRole) return; // Not logged in
      
      // Show common items for all logged-in users
      commonNavItems.forEach(id => {
        const el = document.getElementById(id);
        if (el) el.style.display = 'block';
      });
      
      // Show role-specific items
      if (userRole === 'homeowner' || userRole === 'contractor') {
        homeownerNavItems.forEach(id => {
          const el = document.getElementById(id);
          if (el) el.style.display = 'block';
        });
      } else if (userRole === 'tradesman') {
        tradesmanNavItems.forEach(id => {
          const el = document.getElementById(id);
          if (el) el.style.display = 'block';
        });
      } else if (userRole === 'admin') {
        // Admin navbar - can add admin-specific items here if needed
      }
    }
    
    function checkAuthStatus() {
      const userId = localStorage.getItem('user_id');
      const userName = localStorage.getItem('user_name');
      const token = localStorage.getItem('access_token');
      const userRole = localStorage.getItem('user_role');
      
      if (!userId || !token) {
        alert('Please login to access messages');
        window.location.href = '/';
        return;
      }
      
      currentUserId = userId;
      currentUserName = userName;
      
      // Update nav
      const authButton = document.getElementById('auth-button');
      if (authButton) {
        authButton.textContent = 'Logout';
      }
      
      // Setup role-based navbar
      setupRoleBasedNavbar(userRole);
      
      // Load conversations
      loadConversations();
    }
    
    function handleAuthButtonClick() {
      const token = localStorage.getItem('access_token');
      if (token) {
        localStorage.removeItem('access_token');
        localStorage.removeItem('user_id');
        localStorage.removeItem('user_name');
        localStorage.removeItem('user_role');
        localStorage.removeItem('user_email');
        window.location.href = '/';
      } else {
        window.location.href = '/';
      }
    }
    
    // ActionCable setup - make it available globally
    window.initializeActionCable = function initializeActionCable() {
      try {
        // Try to use createConsumer from window (set by module script)
        if (typeof window.createConsumer !== 'undefined') {
          cable = window.createConsumer();
          console.log('ActionCable initialized');
        } else if (typeof ActionCable !== 'undefined' && ActionCable.createConsumer) {
          cable = ActionCable.createConsumer();
          console.log('ActionCable initialized (fallback)');
        } else {
          console.error('ActionCable not available - createConsumer not found');
        }
      } catch (error) {
        console.error('Error initializing ActionCable:', error);
      }
    };
    
    // Load conversations
    async function loadConversations() {
      try {
        const response = await fetch(`/messages?user_id=${currentUserId}`);
        if (!response.ok) throw new Error('Failed to load conversations');
        
        conversations = await response.json();
        renderConversationList(conversations);
        updateUnreadCounts();
      } catch (error) {
        console.error('Error loading conversations:', error);
        document.getElementById('conversations-list').innerHTML = 
          '<div class="empty-state"><p>Error loading conversations</p></div>';
      }
    }
    
    function renderConversationList(conversationsToRender) {
      const list = document.getElementById('conversations-list');
      
      if (conversationsToRender.length === 0) {
        list.innerHTML = '<div class="empty-state"><p>No conversations yet</p></div>';
        return;
      }
      
      list.innerHTML = conversationsToRender.map(conv => {
        const otherUser = conv.other_user;
        const lastMsg = conv.last_message;
        const isActive = conv.conversation_id === currentConversationId;
        const avatarInitial = (otherUser.name || 'U').charAt(0).toUpperCase();
        const timeStr = formatTimestamp(lastMsg.timestamp);
        const unreadBadge = conv.unread_count > 0 
          ? `<span class="unread-badge">${conv.unread_count}</span>` 
          : '';
        
        return `
          <div class="conversation-item ${isActive ? 'active' : ''}" 
               onclick="selectConversation('${conv.conversation_id}', '${otherUser.user_id}', '${otherUser.name}')">
            <div class="avatar">${avatarInitial}</div>
            <div class="conversation-content">
              <div class="conversation-header-row">
                <span class="conversation-name">${otherUser.name}</span>
                <span class="conversation-time">${timeStr}</span>
              </div>
              <div class="conversation-preview">
                <span class="conversation-message">${lastMsg.content || ''}</span>
                <div class="conversation-status">
                  ${unreadBadge}
                  ${lastMsg.sender_id === currentUserId ? '<span class="read-indicator">‚úì‚úì</span>' : ''}
                </div>
              </div>
            </div>
          </div>
        `;
      }).join('');
    }
    
    function searchConversations(query) {
      if (!query.trim()) {
        renderConversationList(conversations);
        return;
      }
      
      const filtered = conversations.filter(conv => {
        const name = conv.other_user.name.toLowerCase();
        const message = conv.last_message.content.toLowerCase();
        return name.includes(query.toLowerCase()) || message.includes(query.toLowerCase());
      });
      
      renderConversationList(filtered);
    }
    
    function switchTab(tab) {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      event.target.classList.add('active');
      // Archive functionality can be added later
    }
    
    // Select conversation
    async function selectConversation(conversationId, otherUserId, otherUserName) {
      currentConversationId = conversationId;
      
      // Update UI
      document.getElementById('empty-chat-state').style.display = 'none';
      document.getElementById('chat-window').style.display = 'flex';
      document.getElementById('chat-contact-name').textContent = otherUserName;
      document.getElementById('chat-avatar').textContent = otherUserName.charAt(0).toUpperCase();
      
      // Update active conversation in list
      document.querySelectorAll('.conversation-item').forEach(item => {
        item.classList.remove('active');
      });
      event.currentTarget.classList.add('active');
      
      // Subscribe to ActionCable channel
      subscribeToConversation(conversationId);
      
      // Load messages
      await loadMessages(conversationId);
      
      // Mark messages as read
      markMessagesAsRead(conversationId);
    }
    
    // Load messages for conversation
    async function loadMessages(conversationId) {
      try {
        const response = await fetch(`/messages/${conversationId}?user_id=${currentUserId}`);
        if (!response.ok) throw new Error('Failed to load messages');
        
        const messages = await response.json();
        renderMessages(messages);
        scrollToBottom();
      } catch (error) {
        console.error('Error loading messages:', error);
      }
    }
    
    function renderMessages(messages) {
      const area = document.getElementById('messages-area');
      
      if (messages.length === 0) {
        area.innerHTML = '<div class="empty-state"><p>No messages yet. Start the conversation!</p></div>';
        return;
      }
      
      area.innerHTML = messages.map(msg => {
        const isCurrentUser = msg.sender_id === currentUserId;
        const senderName = isCurrentUser ? currentUserName : msg.sender_name;
        const avatarInitial = senderName.charAt(0).toUpperCase();
        const timeStr = formatTimestamp(msg.timestamp);
        
        let messageContent = `<div class="message-bubble">${escapeHtml(msg.content)}</div>`;
        if (msg.attachment_url) {
          messageContent += `<img src="${msg.attachment_url}" class="message-image" alt="Attachment">`;
        }
        
        return `
          <div class="message ${isCurrentUser ? 'sent' : 'received'}">
            <div class="message-avatar">${avatarInitial}</div>
            <div class="message-content">
              ${messageContent}
              <span class="message-time">${timeStr}</span>
            </div>
          </div>
        `;
      }).join('');
    }
    
    function formatTimestamp(timestamp) {
      if (!timestamp) return '';
      
      const date = new Date(timestamp);
      const now = new Date();
      const diffMs = now - date;
      const diffMins = Math.floor(diffMs / 60000);
      const diffHours = Math.floor(diffMs / 3600000);
      const diffDays = Math.floor(diffMs / 86400000);
      
      if (diffMins < 1) return 'Just now';
      if (diffMins < 60) return `${diffMins}m ago`;
      if (diffHours < 24) {
        return date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
      }
      if (diffDays < 7) {
        return date.toLocaleDateString('en-US', { weekday: 'short' });
      }
      return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
    }
    
    function scrollToBottom() {
      const area = document.getElementById('messages-area');
      area.scrollTop = area.scrollHeight;
    }
    
    // Send message
    async function sendMessage() {
      const input = document.getElementById('message-input');
      const content = input.value.trim();
      
      if (!content || !currentConversationId) return;
      
      // Get other user ID from current conversation
      const currentConv = conversations.find(c => c.conversation_id === currentConversationId);
      if (!currentConv) return;
      
      const receiverId = currentConv.other_user.user_id;
      
      try {
        const response = await fetch('/messages', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            sender_id: currentUserId,
            receiver_id: receiverId,
            content: content,
            appointment_id: currentConv.appointment_id || null
          })
        });
        
        if (!response.ok) throw new Error('Failed to send message');
        
        input.value = '';
        input.style.height = 'auto';
        document.getElementById('send-button').disabled = true;
        
        // Message will be added via ActionCable broadcast
        await loadMessages(currentConversationId);
        await loadConversations(); // Refresh conversation list
      } catch (error) {
        console.error('Error sending message:', error);
        alert('Failed to send message. Please try again.');
      }
    }
    
    function handleMessageInputKeydown(event) {
      const input = event.target;
      const sendButton = document.getElementById('send-button');
      
      // Auto-resize textarea
      input.style.height = 'auto';
      input.style.height = input.scrollHeight + 'px';
      
      // Enable/disable send button
      sendButton.disabled = !input.value.trim() || !currentConversationId;
      
      // Send on Enter (but not Shift+Enter)
      if (event.key === 'Enter' && !event.shiftKey) {
        event.preventDefault();
        if (!sendButton.disabled) {
          sendMessage();
        }
      }
    }
    
    // ActionCable subscription
    function subscribeToConversation(conversationId) {
      // Unsubscribe from previous conversation
      if (messagesSubscription) {
        messagesSubscription.unsubscribe();
      }
      
      if (!cable) {
        console.error('ActionCable not initialized');
        return;
      }
      
      messagesSubscription = cable.subscriptions.create(
        {
          channel: 'MessagingChannel',
          conversation_id: conversationId,
          user_id: currentUserId
        },
        {
          received: function(data) {
            if (data.type === 'new_message') {
              handleNewMessage(data.message);
            }
          }
        }
      );
    }
    
    function handleNewMessage(message) {
      // Only add if it's for the current conversation
      if (message.conversation_id === currentConversationId) {
        // Reload messages to get the new one
        loadMessages(currentConversationId);
        scrollToBottom();
      }
      
      // Update conversation list
      loadConversations();
      
      // Update unread counts
      updateUnreadCounts();
    }
    
    async function markMessagesAsRead(conversationId) {
      try {
        const response = await fetch(`/messages/${conversationId}?user_id=${currentUserId}`, {
          method: 'GET'
        });
        // The show action already marks messages as read
        if (response.ok) {
          await loadConversations();
          updateUnreadCounts();
        }
      } catch (error) {
        console.error('Error marking messages as read:', error);
      }
    }
    
    async function updateUnreadCounts() {
      try {
        const response = await fetch(`/messages/unread-counts?user_id=${currentUserId}`);
        if (!response.ok) return;
        
        const counts = await response.json();
        let totalUnread = 0;
        
        Object.values(counts).forEach(count => {
          totalUnread += count;
        });
        
        // Update nav badge
        const navBadge = document.getElementById('nav-unread-badge');
        if (totalUnread > 0) {
          navBadge.textContent = totalUnread;
          navBadge.style.display = 'inline-block';
        } else {
          navBadge.style.display = 'none';
        }
        
        // Update general count
        document.getElementById('general-count').textContent = conversations.length;
      } catch (error) {
        console.error('Error updating unread counts:', error);
      }
    }
    
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
  </script>
  
  <!-- ActionCable -->
  <%= action_cable_meta_tag %>
  <%= javascript_importmap_tags %>
  <script type="module">
    import { createConsumer } from "@rails/actioncable";
    
    // Make ActionCable available globally for the messaging page
    window.createConsumer = createConsumer;
    window.ActionCable = { createConsumer };
    
    // Initialize ActionCable after import
    if (window.initializeActionCable) {
      window.initializeActionCable();
    }
  </script>
</body>
