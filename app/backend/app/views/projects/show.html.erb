<!DOCTYPE html>
<html>
<head>
  <title>Workfinder - Project Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background-color: #f5f5f5;
      color: #333;
    }
    
    header {
      background-color: #ffffff;
      border-bottom: 1px solid #e0e0e0;
      padding: 15px 0;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    nav {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-size: 1.5em;
      font-weight: 600;
      color: #2c3e50;
    }
    
    .nav-links {
      display: flex;
      gap: 25px;
      list-style: none;
      align-items: center;
    }
    
    .nav-links a {
      text-decoration: none;
      color: #555;
      font-weight: 500;
      transition: color 0.2s;
    }
    
    .nav-links a.active {
      color: #3498db;
    }
    
    .nav-links a:hover {
      color: #2c3e50;
    }
    
    .nav-button {
      background-color: #2c3e50;
      color: white;
      padding: 8px 20px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      font-weight: 500;
    }
    
    .container {
      max-width: 1000px;
      margin: 40px auto;
      padding: 0 20px;
    }
    
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 5px;
      color: #2c3e50;
      text-decoration: none;
      margin-bottom: 20px;
      font-weight: 500;
    }
    
    .back-link:hover {
      color: #34495e;
    }
    
    .project-detail-card {
      background: white;
      border-radius: 8px;
      padding: 40px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }
    
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 30px;
      padding-bottom: 30px;
      border-bottom: 2px solid #e0e0e0;
    }
    
    .project-title-section h1 {
      font-size: 2.5em;
      color: #2c3e50;
      margin-bottom: 10px;
    }
    
    .project-status {
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 1em;
      font-weight: 600;
      text-transform: capitalize;
    }
    
    .status-open {
      background-color: #d4edda;
      color: #155724;
    }
    
    .status-in_progress {
      background-color: #cce5ff;
      color: #004085;
    }
    
    .status-completed {
      background-color: #e2e3e5;
      color: #383d41;
    }
    
    .status-cancelled {
      background-color: #f8d7da;
      color: #721c24;
    }
    
    .project-meta-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .meta-item {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
    
    .meta-label {
      font-size: 0.9em;
      color: #666;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .meta-value {
      font-size: 1.1em;
      color: #2c3e50;
      font-weight: 600;
    }
    
    .section-title {
      font-size: 1.4em;
      color: #2c3e50;
      margin-bottom: 15px;
      font-weight: 600;
    }
    
    .description-section {
      margin-bottom: 30px;
    }
    
    .description-text {
      line-height: 1.8;
      color: #555;
      font-size: 1.05em;
    }
    
    .action-buttons {
      display: flex;
      gap: 15px;
      margin-top: 30px;
      padding-top: 30px;
      border-top: 1px solid #e0e0e0;
    }
    
    .btn {
      padding: 12px 30px;
      border-radius: 4px;
      border: none;
      font-size: 1em;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
    }
    
    .btn-primary {
      background-color: #2c3e50;
      color: white;
    }
    
    .btn-primary:hover {
      background-color: #34495e;
    }
    
    .btn-secondary {
      background-color: #e0e0e0;
      color: #333;
    }
    
    .btn-secondary:hover {
      background-color: #d0d0d0;
    }
    
    .btn-danger {
      background-color: #dc3545;
      color: white;
    }
    
    .btn-danger:hover {
      background-color: #c82333;
    }
    
    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #666;
    }
    
    .loading-spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #2c3e50;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .error-message {
      background-color: #f8d7da;
      border: 1px solid #f5c6cb;
      color: #721c24;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      margin: 40px auto;
    }
    
    .error-message h2 {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="logo" style="text-decoration: none; color: #2c3e50;">Workfinder</a>
      <ul class="nav-links">
        <li><a href="/tradesmen-listing" data-turbo="false">Connect with Servicemen</a></li>
        <li><a href="/messages-page" data-turbo="false">Messages</a></li>
        <li><a href="/my-projects" data-turbo="false">My Projects</a></li>
        <li><a href="/manage-profile" id="manage-profile-link" style="display: none;" data-turbo="false">Manage Profile</a></li>
        <li id="auth-button-container">
          <button class="nav-button" onclick="handleAuthButtonClick()" id="auth-button">Login</button>
        </li>
      </ul>
    </nav>
  </header>
  
  <div class="container">
    <a href="/my-projects" class="back-link" data-turbo="false">‚Üê Back to Projects</a>
    
    <div id="loading" class="loading">
      <div class="loading-spinner"></div>
      <p>Loading project details...</p>
    </div>
    
    <div id="error-message" class="error-message" style="display: none;">
      <h2>Project Not Found</h2>
      <p>The project you're looking for doesn't exist or you don't have permission to view it.</p>
      <a href="/my-projects" class="btn btn-primary" data-turbo="false">Back to Projects</a>
    </div>
    
    <div id="project-content" style="display: none;">
      <div class="project-detail-card">
        <div class="project-header">
          <div class="project-title-section">
            <h1 id="project-title">Loading...</h1>
          </div>
          <div class="project-status" id="project-status">Loading</div>
        </div>
        
        <div class="project-meta-grid">
          <div class="meta-item">
            <div class="meta-label">üîß Trade Type</div>
            <div class="meta-value" id="trade-type">Loading...</div>
          </div>
          
          <div class="meta-item">
            <div class="meta-label">üí∞ Budget</div>
            <div class="meta-value" id="budget">Loading...</div>
          </div>
          
          <div class="meta-item">
            <div class="meta-label">üìç Location</div>
            <div class="meta-value" id="location">Loading...</div>
          </div>
          
          <div class="meta-item">
            <div class="meta-label">üìÖ Preferred Date</div>
            <div class="meta-value" id="preferred-date">Loading...</div>
          </div>
          
          <div class="meta-item">
            <div class="meta-label">üìÜ Created</div>
            <div class="meta-value" id="created-at">Loading...</div>
          </div>
          
          <div class="meta-item">
            <div class="meta-label">üîÑ Last Updated</div>
            <div class="meta-value" id="updated-at">Loading...</div>
          </div>
        </div>
        
        <div class="description-section">
          <h2 class="section-title">Project Description</h2>
          <p class="description-text" id="description">Loading...</p>
        </div>
        
        <div class="action-buttons">
          <button class="btn btn-secondary" onclick="window.location.href='/my-projects'">Back to Projects</button>
          <button class="btn btn-primary" onclick="editProject()">Edit Project</button>
          <button class="btn btn-danger" onclick="deleteProject()">Delete Project</button>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    function checkAuthAndLoadProject() {
      const token = localStorage.getItem('access_token');
      const userRole = localStorage.getItem('user_role');
      
      const authButton = document.getElementById('auth-button');
      const manageProfileLink = document.getElementById('manage-profile-link');
      
      if (token) {
        authButton.textContent = 'Logout';
        if (manageProfileLink) {
          manageProfileLink.style.display = 'block';
        }
        
        // Get project ID from URL
        const pathParts = window.location.pathname.split('/');
        const projectId = pathParts[pathParts.length - 1];
        
        loadProject(projectId);
      } else {
        authButton.textContent = 'Login';
        window.location.href = '/';
      }
    }
    
    async function loadProject(projectId) {
      try {
        const token = localStorage.getItem('access_token');
        const response = await fetch(`/api/projects/${projectId}`, {
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });
        
        if (response.ok) {
          const project = await response.json();
          displayProject(project);
        } else {
          document.getElementById('loading').style.display = 'none';
          document.getElementById('error-message').style.display = 'block';
        }
      } catch (error) {
        console.error('Error loading project:', error);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('error-message').style.display = 'block';
      }
    }
    
    function displayProject(project) {
      document.getElementById('loading').style.display = 'none';
      document.getElementById('project-content').style.display = 'block';
      
      // Update title and status
      document.getElementById('project-title').textContent = project.title;
      
      const statusElement = document.getElementById('project-status');
      const statusClass = `status-${project.status}`;
      statusElement.className = `project-status ${statusClass}`;
      statusElement.textContent = project.status.replace('_', ' ');
      
      // Update meta information
      document.getElementById('trade-type').textContent = project.trade_type;
      document.getElementById('budget').textContent = project.budget || 'Not specified';
      document.getElementById('location').textContent = project.location;
      
      const preferredDate = project.preferred_date ? 
        new Date(project.preferred_date).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        }) : 'Not specified';
      document.getElementById('preferred-date').textContent = preferredDate;
      
      const createdDate = new Date(project.created_at).toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
      document.getElementById('created-at').textContent = createdDate;
      
      const updatedDate = new Date(project.updated_at).toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
      document.getElementById('updated-at').textContent = updatedDate;
      
      // Update description
      document.getElementById('description').textContent = project.description;
      
      // Store project ID for actions
      window.currentProjectId = project.project_id;
    }
    
    function editProject() {
      alert('Edit project functionality coming soon!');
    }
    
    function deleteProject() {
      if (confirm('Are you sure you want to delete this project? This action cannot be undone.')) {
        alert('Delete project functionality coming soon!');
      }
    }
    
    function handleAuthButtonClick() {
      const token = localStorage.getItem('access_token');
      if (token) {
        if (confirm('Are you sure you want to logout?')) {
          localStorage.removeItem('access_token');
          localStorage.removeItem('user_role');
          localStorage.removeItem('user_email');
          localStorage.removeItem('user_id');
          localStorage.removeItem('user_name');
          alert('Logged out successfully!');
          window.location.href = '/';
        }
      } else {
        window.location.href = '/';
      }
    }
    
    checkAuthAndLoadProject();
  </script>
</body>
</html>
