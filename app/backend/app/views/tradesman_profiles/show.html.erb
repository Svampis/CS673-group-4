    }
    
    .stars {
      display: flex;
      gap: 3px;
      margin-bottom: 20px;
    }
    
    .star {
      color: #ffc107;
      font-size: 1.5em;
    }
    
    .star.empty {
      color: #ddd;
    }
    
    .action-buttons {
      display: flex;
      gap: 15px;
    }
    
    .action-button {
      padding: 12px 30px;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      font-size: 1em;
      transition: background-color 0.2s;
    }
    
    .action-button.message {
      background-color: #2c3e50;
      color: white;
    }
    
    .action-button.message:hover {
      background-color: #34495e;
    }
    
    .action-button.schedule {
      background-color: #2c3e50;
      color: white;
    }
    
    .action-button.schedule:hover {
      background-color: #34495e;
    }
    
    .about-section {
      margin-bottom: 40px;
    }
    
    .about-section h2 {
      font-size: 1.5em;
      margin-bottom: 15px;
      color: #2c3e50;
    }
    
    .about-section p {
      color: #666;
      line-height: 1.8;
      font-size: 1em;
    }
    
    .reviews-section h2 {
      font-size: 1.5em;
      margin-bottom: 25px;
      color: #2c3e50;
    }
    
    .review-card {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      border-left: 4px solid #3498db;
    }
    
    .review-rating {
      display: flex;
      gap: 3px;
      margin-bottom: 10px;
    }
    
    .review-rating .star {
      font-size: 1.2em;
    }
    
    .review-comment {
      color: #555;
      line-height: 1.6;
      margin-bottom: 8px;
    }
    
