          <!-- Reviews will be loaded here -->
        </div>
      </div>
    </div>
  </div>
  
  <script>
    const tradesmanId = '<%= @tradesman_id %>';
    
    async function loadProfile() {
      try {
        // Load tradesman data
        const tradesmanResponse = await fetch(`/tradesmen/${tradesmanId}`);
        if (!tradesmanResponse.ok) {
          document.getElementById('loading').textContent = 'Tradesman not found';
          return;
        }
        const tradesman = await tradesmanResponse.json();
        
        // Load reviews
        const reviewsResponse = await fetch(`/reviews/${tradesmanId}`);
        const reviews = await reviewsResponse.json();
        
        // Display profile
        displayProfile(tradesman, reviews);
        
        document.getElementById('loading').style.display = 'none';
        document.getElementById('profile-content').style.display = 'block';
      } catch (error) {
        console.error('Error loading profile:', error);
        document.getElementById('loading').textContent = 'Error loading profile';
      }
    }
    
    function displayProfile(tradesman, reviews) {
      // Set basic info
      document.getElementById('profile-name').textContent = tradesman.name || 'Unknown';
      document.getElementById('profile-address').textContent = tradesman.address || 'Address not provided';
      document.getElementById('profile-profession').textContent = `Licensed ${tradesman.trade || 'Professional'}`;
      document.getElementById('profile-email').textContent = tradesman.email || 'Email not provided';
      
      // Set rating stars
      const rating = tradesman.rating || 0;
      const fullStars = Math.floor(rating);
      const hasHalfStar = rating % 1 >= 0.5;
      
      let starsHtml = '';
      for (let i = 0; i < 5; i++) {
        if (i < fullStars) {
          starsHtml += '<span class="star">â˜…</span>';
        } else if (i === fullStars && hasHalfStar) {
          starsHtml += '<span class="star">â˜…</span>';
        } else {
          starsHtml += '<span class="star empty">â˜…</span>';
        }
      }
      document.getElementById('profile-stars').innerHTML = starsHtml;
      
      // Set about text (from profile.about if available)
      const aboutText = tradesman.profile?.about || "No description available.";
      document.getElementById('about-text').textContent = aboutText;
      
      // Display reviews
      const reviewsContainer = document.getElementById('reviews-container');
      if (reviews.length === 0) {
        reviewsContainer.innerHTML = '<p style="color: #999;">No reviews yet.</p>';
      } else {
        reviewsContainer.innerHTML = reviews.map(review => createReviewCard(review)).join('');
      }
    }
    
    function createReviewCard(review) {
      const rating = review.rating || 0;
      const fullStars = Math.floor(rating);
      const hasHalfStar = rating % 1 >= 0.5;
      
      let starsHtml = '';
      for (let i = 0; i < 5; i++) {
        if (i < fullStars) {
          starsHtml += '<span class="star">â˜…</span>';
        } else if (i === fullStars && hasHalfStar) {
          starsHtml += '<span class="star">â˜…</span>';
        } else {
          starsHtml += '<span class="star empty">â˜…</span>';
        }
      }
      
      return `
        <div class="review-card">
          <div class="review-rating">${starsHtml}</div>
          <div class="review-comment">${review.comment || 'No comment'}</div>
          <div class="review-author">- Anonymous</div>
        </div>
      `;
    }
    
    function handleMessage() {
      alert('Message functionality will be implemented');
    }
    
    function handleSchedule() {
      alert('Schedule functionality will be implemented');
    }
    
    // Load profile on page load
    loadProfile();
    
    // Profile Modal Functions
    let selectedRole = 'homeowner';
    let isLoginMode = true;
    
    function openProfileModal() {
      const modal = document.getElementById('profileModal');
      if (modal) {
        modal.style.display = 'block';
        resetModal();
      }
    }
    
    function closeProfileModal() {
      const modal = document.getElementById('profileModal');
      if (modal) {
        modal.style.display = 'none';
        resetModal();
      }
    }
    
    function resetModal() {
      isLoginMode = true;
      const loginForm = document.getElementById('login-form');
      const signupForm = document.getElementById('signup-form');
      const roleSelector = document.getElementById('role-selector');
      const modalTitle = document.getElementById('modal-title');
      const switchText = document.getElementById('switch-text');
      const switchLink = document.getElementById('switch-link');
      
      if (loginForm) loginForm.style.display = 'block';
      if (signupForm) signupForm.style.display = 'none';
      if (roleSelector) roleSelector.style.display = 'none';
      if (modalTitle) modalTitle.textContent = 'Login';
      if (switchText) switchText.textContent = "Don't have an account? ";
      if (switchLink) switchLink.textContent = 'Sign Up';
      selectedRole = 'homeowner';
      updateRoleButtons();
    }
    
    function toggleForm(e) {
      e.preventDefault();
      isLoginMode = !isLoginMode;
      const loginForm = document.getElementById('login-form');
      const signupForm = document.getElementById('signup-form');
      const roleSelector = document.getElementById('role-selector');
      const modalTitle = document.getElementById('modal-title');
      const switchText = document.getElementById('switch-text');
      const switchLink = document.getElementById('switch-link');
      
      if (isLoginMode) {
        if (loginForm) loginForm.style.display = 'block';
        if (signupForm) signupForm.style.display = 'none';
        if (roleSelector) roleSelector.style.display = 'none';
        if (modalTitle) modalTitle.textContent = 'Login';
        if (switchText) switchText.textContent = "Don't have an account? ";
        if (switchLink) switchLink.textContent = 'Sign Up';
      } else {
        if (loginForm) loginForm.style.display = 'none';
        if (signupForm) signupForm.style.display = 'block';
        if (roleSelector) roleSelector.style.display = 'flex';
        if (modalTitle) modalTitle.textContent = 'Sign Up';
        if (switchText) switchText.textContent = 'Already have an account? ';
        if (switchLink) switchLink.textContent = 'Login';
      }
    }
    
    function selectRole(role) {
      selectedRole = role;
      updateRoleButtons();
    }
    
    function updateRoleButtons() {
      const buttons = document.querySelectorAll('.role-button');
      buttons.forEach(btn => {
        if (btn.textContent.toLowerCase().includes(selectedRole)) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });
    }
    
    window.onclick = function(event) {
      const modal = document.getElementById('profileModal');
      if (event.target == modal) {
        closeProfileModal();
      }
    }
  </script>
  
  <!-- Profile Modal -->
